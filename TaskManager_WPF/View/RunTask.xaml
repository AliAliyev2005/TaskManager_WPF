<Window x:Class="TaskManager_WPF.View.RunTask"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager_WPF.View"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Run Task" Height="120" Width="350">
    <Grid>
        <TextBox VerticalContentAlignment="Center" FontSize="18" Width="300" Height="30" VerticalAlignment="Top" Margin="10" Text="{Binding TaskName}"/>
        <Button Content="Run" Width="70" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="20,10" Command="{Binding RunTaskCommand}"/>
    </Grid>
</Window>
